<?xml version="1.0"?>
<STATES>

    <!-- The Menu State -->
    <MENU>
        <TEXTURES>
            <texture filename="assets/gui/playbutton258x72.png" ID="playbutton" />
            <texture filename="assets/gui/exitbutton243x64.png" ID="exitbutton" />
        </TEXTURES>

        <OBJECTS>
            <object type="MenuButton" x="100" y="100" width="400" height="100"
                textureID="playbutton" numFrames="0" callbackID="1" />
            <object type="MenuButton" x="100" y="300" width="400" height="100"
                textureID="exitbutton" numFrames="0" callbackID="2" />
        </OBJECTS>
    </MENU>

    <!-- The Play State -->
    <PLAY>
        <TEXTURES>
            <texture filename="assets/images/helicopter417x143.png" ID="helicopter" />
            <texture filename="assets/images/helicopter207x92.png" ID="helicopter1" />
            <texture filename="assets/images/helicopter207x92_2.png" ID="helicopter2" />
        </TEXTURES>

        <OBJECTS>
            <object type="Player" x="500" y="100" width="200" height="100"
                textureID="helicopter" numFrames="4" callbackID="1" scale="0.2f" />
            <object type="Enemy" x="100" y="300" width="200" height="100"
                textureID="helicopter1" numFrames="5" callbackID="2" scale="0.2f" />
            <object type="Enemy" x="100" y="300" width="200" height="100"
                textureID="helicopter2" numFrames="5" callbackID="3" scale="0.2f" />
        </OBJECTS>
    </PLAY>

    <!-- The Pause State -->
    <PAUSE>
        <TEXTURES>
            <texture filename="assets/gui/mainmenu284x116.png" ID="mainmenubutton" />
            <texture filename="assets/gui/resume284x116.png" ID="resumebutton" />
        </TEXTURES>

        <OBJECTS>
            <object type="MenuButton" x="200" y="100" width="400" height="100"
                textureID="mainmenubutton" numFrames="0" callbackID="1" />
            <object type="MenuButton" x="200" y="300" width="400" height="100"
                textureID="resumebutton" numFrames="0" callbackID="2" />
        </OBJECTS>
    </PAUSE>

    <!-- The Game Over State -->
    <GAMEOVER>
        <TEXTURES>
            <texture filename="assets/images/gameover405x65.png" ID="gameovertext" />
            <texture filename="assets/gui/mainmenu284x116.png" ID="mainmenubutton" />
            <texture filename="assets/gui/restartbutton284x113.png" ID="restartbutton" />
        </TEXTURES>

        <OBJECTS>
            <object type="AnimatedGraphic" x="200" y="100" width="190" height="30"
                textureID="gameovertext" numFrames="2" animSpeed="2" />
            <object type="MenuButton" x="200" y="200" width="200" height="80"
                textureID="mainmenubutton" numFrames="0" callbackID="1" />
            <object type="MenuButton" x="200" y="300" width="200" height="80"
                textureID="restartbutton" numFrames="0" callbackID="2" />
        </OBJECTS>
    </GAMEOVER>
</STATES>
